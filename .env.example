# ===========================
# VERPLICHT — App crasht zonder deze
# ===========================

# Supabase (Settings > API in je Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Database (Settings > Database in Supabase — connection pooling)
DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-1-eu-west-1.pooler.supabase.com:6543/postgres
DIRECT_URL=postgresql://postgres.[ref]:[password]@aws-1-eu-west-1.pooler.supabase.com:5432/postgres

# Redis (nodig voor scanner queue — Railway Redis of Upstash)
REDIS_URL=

# Resend (nodig voor emails — resend.com/api-keys)
RESEND_API_KEY=

# Cron secret (willekeurige string, moet matchen met Vercel cron config)
CRON_SECRET=

# App URL (Vercel: https://siteproof.nl)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================
# OPTIONEEL — Werkt zonder, maar features missen
# ===========================

# Mollie (nodig voor betalingen — mollie.com/dashboard)
# Zonder: pricing/checkout werkt niet, maar rest van de app wel
MOLLIE_API_KEY=

# Mollie subscription plan IDs (worden automatisch aangemaakt bij eerste checkout)
# Hoef je NIET vooraf in te vullen
# MOLLIE_WEBHOOK_SECRET=
# MOLLIE_STARTER_MONTHLY_ID=
# MOLLIE_STARTER_YEARLY_ID=
# MOLLIE_PROFESSIONAL_MONTHLY_ID=
# MOLLIE_PROFESSIONAL_YEARLY_ID=
# MOLLIE_BUREAU_MONTHLY_ID=
# MOLLIE_BUREAU_YEARLY_ID=

# Email afzender (default: noreply@siteproof.nl)
EMAIL_FROM=noreply@siteproof.nl

# Admin email voor notificaties
ADMIN_EMAIL=senna@webser.nl

# ===========================
# NOG NIET GEIMPLEMENTEERD — Kan je skippen
# ===========================

# Sentry error monitoring (sentry.io)
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=

# Supabase service role key (alleen nodig voor admin operaties server-side)
# SUPABASE_SERVICE_ROLE_KEY=

# Upstash (alternatief voor REDIS_URL, niet geimplementeerd in code)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=
